<div class="page-header">
    <h1>NET Authentication <small>Create new Person</small></h1>
    <p>
        This area is used to Create <strong>Person entity</strong>.
    </p>
</div>

<div ng-controller="CreatePersonController">
    <!-- Search Box -->
    <div class="row col-sm-6 col-sm-offset-3">
        <p>
            Create a new Person, after the Person is create a result is shown into the UI
        </p>
        <div class="input-group form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="text" class="form-control" placeholder="First Name" ng-model="newPerson.FirstName">
        </div>
        <div class="input-group form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="text" class="form-control" placeholder="Last Name" ng-model="newPerson.LastName">
        </div>
        <div class="form-group">
            <button class="btn btn-danger" ng-click="reset()">Reset</button>
            <button class="btn btn-info" ng-click="create()">Create</button>
        </div>
    </div>
    <div class="clearfix"></div>
    <!-- Loading -->
    <div class="alert alert-info" ng-show="isLoading">
        <p>Loading Data ...</p>
    </div>
    <!-- Alert -->
    <div class="alert alert-danger" ng-show="hasErrors">
        <p><strong>An error occurred</strong>&nbsp;{{queryError}}</p>
    </div>
    
    <!-- Created person -->
    <div class="alert alert-info" ng-show="personCreated">
        <h3>Person Created</h3>
        <address>
            <span>{{finalPerson.Id}}</span><br />
            <span>{{finalPerson.FirstName}}</span><br />
            <span>{{finalPerson.LastName}}</span>
        </address>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Controllers/Person/CreateController.js"></script>
}

