<div class="page-header">
    <h1>NET Authentication <small>Persons Search</small></h1>
    <p>
        This area is used to Search <strong>Person entity</strong>.
    </p>
</div>

<div ng-controller="SearchPersonController">
    <!-- Search Box -->
    <div class="row col-sm-6 col-sm-offset-3">
        <p>
            Search for existing Persons, you can enter any string and
            the system will query by FirstName and/or LastName matches
        </p>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="text" class="form-control" placeholder="Search criteria" ng-model="query">
            <button class="btn btn-info pull-right" ng-click="command()">Search</button>
        </div>
    </div>
    <div class="clearfix"></div>

    <!-- Results -->
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
            </thead>
            <tbody ng-repeat="person in persons">
                <tr>
                    <td>{{person.Id}}</td>
                    <td>{{person.FirstName}}</td>
                    <td>{{person.LastName}}</td>
                </tr>
            </tbody>
            <tfoot>
                <tr><td colspan="3">Total records found: 0</td></tr>
            </tfoot>
        </table>
    </div>
    
    <!-- Loading -->
    <div class="alert alert-info" ng-show="isLoading">
        <p>Loading Data ...</p>
    </div>
    <!-- Alert -->
    <div class="alert alert-danger" ng-show="hasErrors">
        <p><strong>An error occurred</strong>&nbsp;{{queryError}}</p>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Controllers/Person/SearchController.js"></script>
}

